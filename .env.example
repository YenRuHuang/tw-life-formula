# 資料庫配置
DB_HOST=your_hostinger_db_host
DB_USER=your_db_username
DB_PASSWORD=your_secure_password
DB_NAME=tw_life_formula_db
DB_PORT=3306

# API 金鑰 (請使用強密碼)
GEMINI_API_KEY=your_gemini_api_key_here
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters

# Google AdSense
ADSENSE_PUBLISHER_ID=ca-pub-xxxxxxxxxx
ADSENSE_BANNER_SLOT=xxxxxxxxxx
ADSENSE_RECTANGLE_SLOT=xxxxxxxxxx
ADSENSE_MOBILE_SLOT=xxxxxxxxxx

# Stripe 訂閱系統
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxx
STRIPE_PRICE_ID=price_xxxxxxxxxx

# 應用程式設定
NODE_ENV=development
PORT=3000
SESSION_SECRET=your_session_secret_at_least_32_characters

# 安全設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12

# 訂閱設定
PREMIUM_PRICE=99
PREMIUM_CURRENCY=TWD

# 監控和日誌
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# CORS 設定
ALLOWED_ORIGINS=http://localhost:3000,https://twlifeformula.com

# 警告：絕對不要把真實的 API 金鑰提交到 Git！
# 這個文件只是範例，請複製為 .env 並填入真實值

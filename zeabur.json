{
  "name": "tw-life-formula",
  "services": [
    {
      "name": "tw-life-formula-api",
      "buildCommand": "npm install",
      "startCommand": "npm start",
      "environment": {
        "NODE_ENV": "production"
      },
      "regions": ["hkg"],
      "plan": "pro",
      "healthCheck": {
        "path": "/health",
        "port": 3001
      },
      "envVars": {
        "DB_HOST": "${DB_HOST}",
        "DB_USER": "${DB_USER}",
        "DB_PASSWORD": "${DB_PASSWORD}",
        "DB_NAME": "${DB_NAME}",
        "DB_PORT": "${DB_PORT}",
        "SESSION_SECRET": "${SESSION_SECRET}",
        "JWT_SECRET": "${JWT_SECRET}",
        "GEMINI_API_KEY": "${GEMINI_API_KEY}",
        "ADSENSE_PUBLISHER_ID": "${ADSENSE_PUBLISHER_ID}",
        "ADSENSE_BANNER_SLOT": "${ADSENSE_BANNER_SLOT}",
        "ADSENSE_RECTANGLE_SLOT": "${ADSENSE_RECTANGLE_SLOT}",
        "ADSENSE_MOBILE_SLOT": "${ADSENSE_MOBILE_SLOT}",
        "STRIPE_PUBLISHABLE_KEY": "${STRIPE_PUBLISHABLE_KEY}",
        "STRIPE_SECRET_KEY": "${STRIPE_SECRET_KEY}",
        "STRIPE_WEBHOOK_SECRET": "${STRIPE_WEBHOOK_SECRET}",
        "STRIPE_PRICE_ID": "${STRIPE_PRICE_ID}",
        "RATE_LIMIT_WINDOW_MS": "900000",
        "RATE_LIMIT_MAX_REQUESTS": "100",
        "BCRYPT_SALT_ROUNDS": "12",
        "PREMIUM_PRICE": "99",
        "PREMIUM_CURRENCY": "TWD",
        "LOG_LEVEL": "info",
        "ENABLE_REQUEST_LOGGING": "true",
        "ALLOWED_ORIGINS": "https://${ZEABUR_URL},https://twlifeformula.com"
      }
    }
  ]
}
